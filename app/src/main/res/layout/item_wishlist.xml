<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/itemfavorit_cv"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardCornerRadius="20dp"
    android:background="@drawable/rounded"
    android:layout_margin="5dp"
    app:cardElevation="4dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@drawable/rounded3"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginBottom="10dp"
        android:layout_marginTop="10dp"
        android:paddingBottom="10dp">

        <LinearLayout
            android:layout_marginStart="4dp"
            android:layout_marginEnd="4dp"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:layout_weight="6">

            <TextView
                android:id="@+id/itemfavorit_tv_name"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:text="Name Holiday"
                android:textColor="#000"
                android:textAlignment="center"
                android:layout_weight="1"
                android:layout_marginLeft="5dp"
                android:fontFamily="monospace"
                android:background="@drawable/rounded"
                android:textSize="20sp"
                android:layout_marginTop="20dp"
                android:elevation="10dp"/>


        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="250dp"
            android:orientation="vertical"
            android:background="@drawable/rounded2"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"


            >
            <TextView
                android:textColor="#ffff"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:textAlignment="center"
                android:text="D a t e :"
                />
            <TextView
                android:id="@+id/itemfavorit_date"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="#ffff"
                android:layout_marginLeft="5dp"
                android:textAlignment="center"
                android:layout_marginBottom="10dp"
                android:text="Date"/>
            <TextView
                android:textColor="#ffff"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:textAlignment="center"
                android:text="S t a r t :"/>
            <TextView
                android:id="@+id/itemfavorit_start"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:textColor="#ffff"
                android:textAlignment="center"
                android:layout_marginBottom="10dp"
                android:text="start"/>
            <TextView
                android:textColor="#ffff"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:textAlignment="center"
                android:text="E n d :"/>
            <TextView
                android:id="@+id/itemfavorit_end"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:textColor="#ffff"
                android:textAlignment="center"
                android:layout_marginBottom="10dp"
                android:text="end"/>
            <TextView
                android:textColor="#ffff"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:textAlignment="center"
                android:text="T y p e :"/>
            <TextView
                android:id="@+id/itemfavorit_type"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:textAlignment="center"
                android:textColor="#ffff"
                android:layout_marginBottom="10dp"
                android:text="type"/>
            <TextView
                android:textColor="#ffff"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:textAlignment="center"
                android:text="C o u n t r y :"/>
            <TextView
                android:id="@+id/itemfavorit_country"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:textColor="#ffff"
                android:textAlignment="center"
                android:text="Country"/>

            <ImageButton
                android:id="@+id/itemfavorit_star_favorit"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:background="@drawable/trash"
                android:backgroundTint="#fff"
                android:elevation="1dp"
                android:layout_marginTop="-40dp"
                android:layout_marginRight="10dp"
                android:outlineAmbientShadowColor="#272727"
                />
        </LinearLayout>

    </LinearLayout>

</androidx.cardview.widget.CardView>